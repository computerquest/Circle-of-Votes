<html>
<head>
<title>Main</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
</head>
<body style="padding: 0px; margin: 0px;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href='/home' class="navbar-brand"><span style='color:#ff1a1a'>Circle</span> of <span style='color:#00e600;'>Vote<span style='font-size: 15px'>$</span></span></a>
        <div class="collapsem navbar-collapse" id="navbarNav">
            <ul class='navbar-nav'>
                <li class='nav-item'><a href='/about' class='nav-link'>About</a></li>
            </ul>
        </div>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id='search'>
            <button id="button" class="btn btn-outline-dark my-2 my-sm-0" onclick="click">Search</button>
        </form>
    </nav>
    
    {{^singleVote}}<h1 style='margin: 1%'>Search results</h1>{{/singleVote}}
    {{#singleVote}}<h1 style='margin: 1%'>Recent votes</h1>{{/singleVote}}
    {{#bills}}
        <div class='card border-black {{#singleVote}}{{#pass}}text-white bg-success{{/pass}} {{^pass}}text-white bg-danger{{/pass}}{{/singleVote}}' style='margin-bottom: 1%; margin-left:1%; margin-right: 1%;'>
            <h5 class='card-header'>{{slug}}</h5>
            <div class='card-body'>
                <h5 class='card-title'>{{name}}</h5>
                <div class='card-text'>
                    <p>Summary: {{{summary}}}</p>
                    <p>Last Action: {{lastDate}}</p>
                    {{^singleVote}}
                        <p>Senate Pass: {{senatePass}} and House Pass: {{housePass}}</p>
                    {{/singleVote}}
                </div>
                <a href='{{link}}' class='btn {{#singleVote}}btn-outline-light{{/singleVote}} {{^singleVote}}btn-outline-dark{{/singleVote}}'>See details</a>
                <a href='{{link}}#voteSection' style='margin-left: 1%' class='btn {{#singleVote}}btn-outline-light{{/singleVote}}{{^singleVote}}btn-outline-dark{{/singleVote}}'>See Votes</a>
            </div>
        </div>
    {{/bills}}
</body>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js" integrity="sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U" crossorigin="anonymous"></script>
<script src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js" integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9" crossorigin="anonymous"></script>
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-117836235-1"></script>
<script>$(document).ready(function() { $('body').bootstrapMaterialDesign(); });</script>
<script>
$('#button').click(function() {
    window.location.replace('/search/'+encodeURIComponent($('#search').val()))
    return false
})
</script>
