<html>
<head>
<title>{{name}}</title>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-117836235-1"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-117836235-1');
</script>

</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href='/home' class="navbar-brand"><span style='color:#ff1a1a'>Circle</span> of <span style='color:#00e600;'>Vote<span style='font-size: 15px'>$</span></span></a>
        <div class="collapsem navbar-collapse" id="navbarNav">
            <ul class='navbar-nav'>
                <li class='nav-item'><a href='/about' class='nav-link'>About</a></li>
            </ul>
        </div>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id='search'>
            <button id="button" class="btn btn-outline-dark my-2 my-sm-0" onclick="click">Search</button>
        </form>
    </nav>
<div style='margin-right: 2%'>
    <h1 style='margin: 2%'>{{name}}</h1>
    <div style="margin-left: 5%">
        <h3>Summary:</h3>
        <p style='margin-left: 5%'>{{summary}}</p>
        <h3>Last Action:</h3>
        <p style='margin-left: 5%'>{{lastDate}}</p>
        <h3>Pass:</h3>
        <div style='margin-left: 5%'>
            {{#actionShow}}<p>Senate: {{senatePass}} and House: {{housePass}}</p>{{/actionShow}}
            {{^actionShow}}<p>Has not been passed</p>{{/actionShow}}
        </div>
        
        {{#votePresent}}
        <h3 id="voteSection">Votes:</h3>
        {{/votePresent}}
        {{#vote}}
            <div class='card {{#pass}}text-white bg-success{{/pass}} {{^pass}}text-white bg-danger{{/pass}}' style='margin-bottom: 1%; margin-left: 5%'>
                <h5 class='card-header'>{{chamber}}</h5>
                <div class='card-body'>
                    <h5 class='card-title'>{{result}}</p>
                    <div class='card-text'>
                        <p>{{date}}</p>                    
                        <p>{{question}}</p> 
                        <a href="{{link}}" class="btn btn-outline-light">View Graph</a>
                    </div>
                </div>
            </div>
        {{/vote}}
        
        {{#actionPresent}}
        <h3>Action:</h3>
        {{/actionPresent}}
        {{#actions}}
            <div class='card' style='margin-bottom: 1%; margin-left: 5%'>
                <h5 class='card-header'>{{chamber}} | {{type}}</h5>
                <div class='card-body'>
                    <div class='card-text'>
                        <p>{{date}}</p>                    
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
        {{/actions}}
    </div>
</div>
</body>
<script>
$('#button').click(function() {
    window.location.replace('/search/'+encodeURIComponent($('#search').val()))
    return false
})
</script>
</html>